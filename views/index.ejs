	<div class="topper">
		<div class="para">
			<p>CH</p>
			<img src="https://www.youchoose.org.au/Content/images/you-choose.png" width="130" height="130"/>
			<p>SE</p>
		</div>
			<p id="dil">Remove your Dilemma!!!!!!!</p>
	</div>



<div class="container">
<div class="row" style="width:30%;margin:50px auto">
	<form action="/search" method="get">
		<div class="form-group">
			<input type="text" placeholder="firstchoice" name="firstchoice" style="width:100%">
		</div>
		<div class="form-group">
			<input type="text" placeholder="secondchoice" name="secondchoice" style="width:100%">
		</div>
		<div class="oneMore" style="display:none">
		<div class="form-group">
			<input type="text" placeholder="thirdchoice" name="thirdchoice" style="width:100%">
		</div>
		</div>
		<div class="twoMore" style="display:none">
		<div class="form-group">
			<input type="text" placeholder="fourthchoice" name="fourthchoice" style="width:100%">
		</div>
		</div>
		
		<div class="form-group ">
			<button class="btn btn-lg btn-primary btn-block" > Submit</button>
		</div>
	</form>
	<button id="show">One more</button>
</div>
</div>


<script>

var i=0;
    $("#show").click(function(){
    i++;
    if(i==1){
        $(".oneMore").show();
    }
    else if(i==2){
    	$(".twoMore").show();
    	$("#show").hide();
    }

    });


</script>


